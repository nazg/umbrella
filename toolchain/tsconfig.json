{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {

    "types": [
    ],

    "target": "esnext",
    "module": "esnext",

    "rootDir": ".",
    "traceResolution": true,
    "moduleResolution": "node",

    "esModuleInterop": true,
    "resolveJsonModule": true
  },

  "exclude": [
    "node_modules"
  ],

  "include": [
    "src/**/*.ts"
  ]
}
